execute pathogen#infect()

colorscheme molokai

" Enable filetype plugins
filetype plugin on
filetype indent on

" Auto read when file is changed outside of vim
set autoread

" Ignore case when searching
set ignorecase

" Use spaces instead of tabs
set expandtab
set smartindent

" 1 tab == 2 spaces
set shiftwidth=2
set tabstop=2
set softtabstop=2

" Enable syntax highlighting
syntax enable

" highlight after 80th column
set colorcolumn=80

" turn off wordwrap
set nowrap

" show line numbers
set number
